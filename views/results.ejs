<!-- views/results.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Results</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        pre {
            white-space: pre-wrap; /* Since Tailwind doesn't handle this directly */
            word-break: break-all; /* For extremely long lines */
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
            overflow: auto; /* Add scrollbars if code overflows */
        }
    </style>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <div class="container mx-auto p-4 flex-grow">
        <h1 class="text-3xl font-semibold mb-4 text-gray-800 text-center">Test Results</h1>
        <h2 class="text-2xl font-semibold mb-6 text-blue-600 text-center">Final Score: <%= score %></h2>

        <% for (let i = 1; i <= 3; i++) { %>
            <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <h3 class="text-xl font-bold mb-2 text-gray-700">Question <%= i %></h3>
                <% if (answers[i]) { %>
                    <p class="text-gray-600 font-semibold mb-1">Your Code:</p>
                    <pre class="mb-2"><%= answers[i].code %></pre>
                    <p class="text-gray-600">Score: <span class="font-medium"><%= answers[i].evaluation.score %></span></p>
                    <p class="text-gray-600">Feedback: <span class="font-medium"><%= answers[i].evaluation.feedback %></span></p>
                <% } else { %>
                    <p class="text-gray-500">No answer submitted for this question.</p>
                <% } %>
            </div>
        <% } %>
    </div>

    <footer class="bg-gray-200 text-center p-4 mt-4">
        <p class="text-sm text-gray-500">Â© 2024 Coding Test</p>
    </footer>
</body>
</html>